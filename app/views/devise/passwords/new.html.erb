 <%@title = 'Reset Password'%>
 <div class = 'me-5 mt-5 ms-5 ps-5 pe-5'>
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email ,:class => 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,  class: 'form-control', placeholder: 'Email Address'%>
    </div>

    <div class="actions form-group">
      <%= f.submit "Send me reset password instructions",class: "btn btn-primary mt-3 mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
